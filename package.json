{
  "name": "blank",
  "version": "0.2.9",
  "author": "Fery Wardiyanto <ferywardiyanto@gmail.com>",
  "license": "MIT",
  "private": true,
  "keywords": [
    "wordpress",
    "wordpress-theme",
    "wordpress-boilerplate",
    "wordpress-project"
  ],
  "scripts": {
    "serve": "cross-env WP_ENV=development gulp",
    "archive": "cross-env WP_ENV=production gulp build && gulp zip",
    "build": "cross-env WP_ENV=production gulp build --skip php"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "bulma": "^0.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@feryardiant/read-changelog": "^0.1.7",
    "@wdio/browserstack-service": "^6.1.15",
    "@wdio/cli": "^6.1.19",
    "@wdio/dot-reporter": "^6.1.14",
    "@wdio/local-runner": "^6.1.14",
    "@wdio/mocha-framework": "^6.1.14",
    "@wordpress/eslint-plugin": "^6.1.0",
    "babel-eslint": "^10.1.0",
    "browser-sync": "^2.26.7",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "expect-webdriverio": "^1.1.5",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-babel": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-connect-php": "^1.0.3",
    "gulp-eslint": "^6.0.0",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-phpcs": "^3.1.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-stylelint": "^13.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-wp-pot": "2.4.3",
    "gulp-zip": "^5.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.7",
    "matched": "^4.0",
    "standard-changelog": "^2.0.24",
    "standard-version": "^8.0.0",
    "stylelint": "^10.0.0",
    "stylelint-config-standard-scss": "^1.1.0",
    "stylelint-scss": "^3.17.2",
    "webdriverio": "^6.1.14",
    "yargs": "^15.3.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e -V",
      "pre-commit": "lint-staged"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false
        }
      ]
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "parser": "babel-eslint"
    },
    "rules": {
      "indent": [
        2,
        2
      ],
      "semi": [
        2,
        "never"
      ],
      "wrap-iife": [
        2,
        "inside"
      ]
    }
  },
  "eslintIgnore": [
    "**/*.min.js",
    "**/vendor/**",
    "/build/**",
    "/node_modules/**",
    "/public/**",
    "/gulpfile.js",
    "/**.old"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard-scss"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "packages/**/*.php": [
      "vendor/bin/phpcs --standard=packages/phpcs.xml"
    ],
    "packages/**/*.js": [
      "eslint --fix"
    ],
    "packages/**/*.scss": [
      "stylelint --fix"
    ]
  }
}
